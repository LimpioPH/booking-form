    <button class="download-btn" onclick="downloadImage()">Download PNG</button>
    
    <script>
        function downloadImage() {
            const element = document.getElementById('graphic');
            
            // Create canvas
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // Set canvas size to 1:1 ratio (square)
            canvas.width = 1080;
            canvas.height = 1080;
            
            // Create a temporary container with exact dimensions
            const tempContainer = element.cloneNode(true);
            tempContainer.style.width = '1080px';
            tempContainer.style.height = '1080px';
            tempContainer.style.position = 'absolute';
            tempContainer.style.left = '-9999px';
            tempContainer.style.top = '-9999px';
            document.body.appendChild(tempContainer);
            
            // Use html2canvas alternative approach
            html2canvas(tempContainer, {
                width: 1080,
                height: 1080,
                scale: 1,
                backgroundColor: null,
                useCORS: true,
                allowTaint: true
            }).then(canvas => {
                // Create download link
                const link = document.createElement('a');
                link.download = 'limpio-ph-process.png';
                link.href = canvas.toDataURL('image/png');
                link.click();
                
                // Clean up
                document.body.removeChild(tempContainer);
            }).catch(error => {
                console.error('Error generating image:', error);
                // Fallback method
                fallbackDownload();
            });
        }
        
        function fallbackDownload() {
            // Alternative download method
            const element = document.getElementById('graphic');
            const rect = element.getBoundingClientRect();
            
            // Create a new window with the graphic
            const newWindow = window.open('', '_blank');
            newWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Limpio PH Process - Right click to save image</title>
                    <style>
                        body { margin: 0; padding: 20px; background: #f0f0f0; display: flex; justify-content: center; align-items: center; min-height: 100vh; }
                        .instruction { text-align: center; margin-bottom: 20px; font-family: Arial, sans-serif; }
                    </style>
                </head>
                <body>
                    <div>
                        <div class="instruction">
                            <h3>Right-click on the image below and select "Save image as..." to download</h3>
                        </div>
                        ${element.outerHTML}
                    </div>
                </body>
                </html>
            `);
        }
    </script>
    
    <!-- Include html2canvas library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
</body>
